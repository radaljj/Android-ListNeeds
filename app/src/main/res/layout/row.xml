<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="10dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        app:cardCornerRadius="7dp"
        android:id="@+id/Cardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        
        <RelativeLayout
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
<TextView
    android:layout_marginLeft="19dp"
    android:layout_marginTop="10dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textSize="20sp"
    android:id="@+id/row_ime"
    android:textStyle="bold"
    android:text="Product name"/>
            <TextView
                android:layout_marginLeft="19dp"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_below="@id/row_ime"
                android:id="@+id/row_opis"
                android:text="Product description"/>
            <TextView
            android:layout_marginLeft="19dp"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:id="@+id/row_cena"
                android:layout_below="@id/row_opis"
            android:text="Product price"/>

            <TextView
                android:id="@+id/row_kolicina"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="19dp"
                android:layout_marginTop="10dp"
                android:text="Quantity"
                android:layout_below="@id/row_cena"
                android:textSize="20sp"
                 />

            <TextView
                android:id="@+id/row_datum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="19dp"
                android:layout_marginTop="10dp"
                android:text=""
                android:layout_below="@id/row_kolicina"
                android:textSize="20sp"
                />

            <TableRow
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="15dp"
                android:layout_alignBottom="@id/row_datum"
                android:layout_marginRight="8dp"
                android:orientation="horizontal">


                <ImageButton
                    android:layout_height="30dp"
                    android:layout_marginRight="5dp"
                    android:id="@+id/editButton"
                    android:layout_marginEnd="5dp"
                    android:background="@drawable/ic_menu_edit"
                    android:layout_width="30dp" >

                </ImageButton>

              <ImageButton
                  android:layout_height="30dp"
                  android:layout_marginRight="5dp"
                  android:layout_marginLeft="5dp"
                  android:id="@+id/deleteButton"
                  android:background="@drawable/izbrisi"
                  android:layout_width="30dp" >

              </ImageButton>

            </TableRow>

        </RelativeLayout>
        
        

    </androidx.cardview.widget.CardView>

</LinearLayout>